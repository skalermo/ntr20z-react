    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Client side",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: start",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server side",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/backend/server.js",
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Server side",
                "Client side",
            ]
        }
    ]
}